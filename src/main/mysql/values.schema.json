{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "mysqlRootPassword": {
        "type": "string",
        "title": "MySQL Root 密码",
        "minLength": 8,
        "default": "rootpassword",
        "description": "MySQL root 用户的密码。"
      },
      "mysqlUser": {
        "type": "string",
        "title": "MySQL 用户名",
        "default": "user",
        "description": "MySQL 用户的用户名。"
      },
      "mysqlPassword": {
        "type": "string",
        "title": "MySQL 用户密码",
        "minLength": 8,
        "default": "password",
        "description": "MySQL 用户的密码。"
      },
      "image": {
        "type": "object",
        "title": "MySQL 镜像配置",
        "properties": {
          "tag": {
            "type": "string",
            "title": "镜像标签",
            "default": "8.0",
            "description": "MySQL 镜像的版本标签。"
          }
        },
        "required": ["tag"]
      }
    },
    "required": ["mysqlRootPassword", "mysqlUser", "mysqlPassword", "image"]
  }
  