{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "imageTag": {
        "type": "string",
        "title": "MySQL 版本",
        "form": true,
        "description": "选择 MySQL 的版本标签",
        "enum": ["5.7.30", "8.0.28", "5.6.51"],
        "default": "5.7.30"
      },
      "mysqlRootPassword": {
        "type": "string",
        "title": "MySQL Root 用户密码",
        "form": true,
        "description": "设置 MySQL Root 用户的密码",
        "minLength": 8
      },
      "mysqlUser": {
        "type": "string",
        "title": "新建 MySQL 用户",
        "form": true,
        "description": "要创建的新 MySQL 用户名",
        "default": "user"
      },
      "mysqlPassword": {
        "type": "string",
        "title": "新建 MySQL 用户的密码",
        "form": true,
        "description": "为新建的 MySQL 用户设置密码",
        "minLength": 8
      },
      "mysqlDatabase": {
        "type": "string",
        "title": "MySQL 数据库名称",
        "form": true,
        "description": "新建的数据库名称",
        "default": "mydatabase"
      },
      "persistence": {
        "type": "object",
        "title": "持久化存储配置",
        "form": true,
        "properties": {
          "enabled": {
            "type": "boolean",
            "title": "启用持久化存储",
            "form": true,
            "default": true
          },
          "accessMode": {
            "type": "string",
            "title": "访问模式",
            "form": true,
            "default": "ReadWriteOnce"
          },
          "size": {
            "type": "string",
            "title": "存储大小",
            "form": true,
            "default": "8Gi"
          }
        }
      },
      "resources": {
        "type": "object",
        "title": "资源请求和限制",
        "form": true,
        "properties": {
          "requests": {
            "type": "object",
            "form": true,
            "properties": {
              "memory": {
                "type": "string",
                "title": "内存请求",
                "form": true,
                "default": "256Mi"
              },
              "cpu": {
                "type": "string",
                "title": "CPU 请求",
                "form": true,
                "default": "100m"
              }
            }
          }
        }
      },
      "securityContext": {
        "type": "object",
        "title": "安全上下文配置",
        "form": true,
        "properties": {
          "enabled": {
            "type": "boolean",
            "title": "启用安全上下文",
            "form": true,
            "default": false
          }
        }
      },
      "service": {
        "type": "object",
        "title": "服务配置",
        "form": true,
        "properties": {
          "type": {
            "type": "string",
            "title": "服务类型",
            "form": true,
            "default": "ClusterIP"
          },
          "port": {
            "type": "integer",
            "title": "服务端口",
            "form": true,
            "default": 3306
          }
        }
      },
      "ssl": {
        "type": "object",
        "title": "SSL 配置",
        "form": true,
        "properties": {
          "enabled": {
            "type": "boolean",
            "title": "启用 SSL",
            "form": true,
            "default": false
          },
          "secret": {
            "type": "string",
            "title": "SSL Secret 名称",
            "form": true,
            "default": "mysql-ssl-certs"
          }
        }
      },
      "testFramework": {
        "type": "object",
        "title": "测试框架配置",
        "form": true,
        "properties": {
          "enabled": {
            "type": "boolean",
            "title": "启用测试框架",
            "form": true,
            "default": false
          }
        }
      }
    },
    "required": [
      "mysqlRootPassword",
      "mysqlUser",
      "mysqlPassword"
    ],
    "additionalProperties": false
  }
  