{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "mysqlRootPassword": {
        "type": "string",
        "description": "The root password for MySQL."
      },
      "mysqlUser": {
        "type": "string",
        "description": "The username for MySQL user."
      },
      "mysqlPassword": {
        "type": "string",
        "description": "The password for MySQL user."
      },
      "mysqlDatabase": {
        "type": "string",
        "description": "The name of the database to create."
      },
      "replicaCount": {
        "type": "integer",
        "description": "Number of MySQL replicas to deploy.",
        "default": 1
      },
      "image": {
        "type": "object",
        "properties": {
          "repository": {
            "type": "string",
            "description": "MySQL image repository."
          },
          "tag": {
            "type": "string",
            "description": "MySQL image tag."
          },
          "pullPolicy": {
            "type": "string",
            "enum": ["Always", "IfNotPresent", "Never"],
            "description": "Image pull policy."
          }
        },
        "required": ["repository", "tag"]
      },
      "service": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["ClusterIP", "NodePort", "LoadBalancer"],
            "description": "Service type."
          },
          "port": {
            "type": "integer",
            "description": "Service port for MySQL."
          }
        },
        "required": ["type", "port"]
      },
      "persistence": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean",
            "description": "Enable persistent storage."
          },
          "accessMode": {
            "type": "string",
            "enum": ["ReadWriteOnce", "ReadOnlyMany", "ReadWriteMany"],
            "description": "Access mode for the volume."
          },
          "size": {
            "type": "string",
            "description": "Size of the persistent volume."
          },
          "storageClass": {
            "type": "string",
            "description": "StorageClass to use for the persistent volume."
          }
        },
        "required": ["enabled", "accessMode", "size"]
      }
    },
    "required": ["mysqlRootPassword", "mysqlUser", "mysqlPassword", "mysqlDatabase", "image", "service", "persistence"]
  }
  