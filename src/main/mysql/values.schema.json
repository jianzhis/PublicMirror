{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "mysql": {
      "type": "object",
      "properties": {
        "rootPassword": {
          "type": "string",
          "title": "Root密码",
          "description": "MySQL root用户的密码",
          "default": "changeme"
        },
        "database": {
          "type": "string",
          "title": "数据库名称",
          "description": "初始创建的数据库名称",
          "default": "mydb"
        },
        "user": {
          "type": "string",
          "title": "用户名",
          "description": "创建的数据库用户名",
          "default": "user"
        },
        "password": {
          "type": "string",
          "title": "用户密码",
          "description": "数据库用户的密码",
          "default": "changeme"
        }
      }
    },
    "resources": {
      "type": "object",
      "title": "资源配置",
      "properties": {
        "limits": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "string",
              "title": "CPU限制",
              "pattern": "^[0-9]+m?$",
              "default": "1000m"
            },
            "memory": {
              "type": "string",
              "title": "内存限制",
              "pattern": "^[0-9]+(Mi|Gi)$",
              "default": "2Gi"
            }
          }
        },
        "requests": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "string",
              "title": "CPU请求",
              "pattern": "^[0-9]+m?$",
              "default": "500m"
            },
            "memory": {
              "type": "string",
              "title": "内存请求",
              "pattern": "^[0-9]+(Mi|Gi)$",
              "default": "1Gi"
            }
          }
        }
      }
    },
    "persistence": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "title": "启用持久化",
          "default": true
        },
        "size": {
          "type": "string",
          "title": "存储大小",
          "pattern": "^[0-9]+(Mi|Gi)$",
          "default": "10Gi"
        },
        "storageClass": {
          "type": "string",
          "title": "存储类",
          "default": "local"
        }
      }
    }
  }
}