{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "MySQL Helm Chart Values Schema",
    "properties": {
      "imageTag": {
        "type": "string",
        "title": "MySQL 版本",
        "description": "选择 MySQL 的版本标签",
        "enum": ["5.7.30", "8.0.28", "5.6.51"],
        "default": "5.7.30"
      },
      "mysqlRootPassword": {
        "type": "string",
        "title": "MySQL Root 用户密码",
        "description": "设置 MySQL Root 用户的密码",
        "minLength": 8
      },
      "mysqlUser": {
        "type": "string",
        "title": "新建 MySQL 用户",
        "description": "要创建的新 MySQL 用户名",
        "default": "user"
      },
      "mysqlPassword": {
        "type": "string",
        "title": "新建 MySQL 用户的密码",
        "description": "为新建的 MySQL 用户设置密码",
        "minLength": 8
      },
      "mysqlDatabase": {
        "type": "string",
        "title": "MySQL 数据库名称",
        "description": "新建的数据库名称",
        "default": "mydatabase"
      }
    },
    "required": [
      "mysqlRootPassword",
      "mysqlUser",
      "mysqlPassword"
    ],
    "additionalProperties": false
  }
  