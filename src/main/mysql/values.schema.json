{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "mysqlRootPassword": {
        "type": "string",
        "title": "MySQL Root 密码",
        "form": true,
        "minLength": 8,
        "default": "rootpassword",
        "description": "MySQL root 用户的密码。"
      },
      "mysqlUser": {
        "type": "string",
        "title": "MySQL 用户名",
        "form": true,
        "default": "user",
        "description": "MySQL 用户的用户名。"
      },
      "mysqlPassword": {
        "type": "string",
        "title": "MySQL 用户密码",
        "form": true,
        "minLength": 8,
        "default": "password",
        "description": "MySQL 用户的密码。"
      },
      "mysqlDatabase": {
        "type": "string",
        "title": "MySQL 数据库名称",
        "form": true,
        "default": "mydb",
        "description": "要创建的数据库名称。"
      },
      "replicaCount": {
        "type": "integer",
        "title": "副本数量",
        "form": true,
        "minimum": 1,
        "default": 1,
        "description": "要部署的 MySQL 副本数量。"
      },
      "image": {
        "type": "object",
        "title": "MySQL 镜像配置",
        "form": true,
        "properties": {
          "repository": {
            "type": "string",
            "title": "镜像仓库",
            "form": true,
            "default": "mysql",
            "description": "MySQL 镜像的仓库地址。"
          },
          "tag": {
            "type": "string",
            "title": "镜像标签",
            "form": true,
            "default": "8.0",
            "description": "MySQL 镜像的标签。"
          },
          "pullPolicy": {
            "type": "string",
            "title": "镜像拉取策略",
            "form": true,
            "enum": ["Always", "IfNotPresent", "Never"],
            "default": "IfNotPresent",
            "description": "镜像的拉取策略。"
          }
        },
        "required": ["repository", "tag"]
      },
      "service": {
        "type": "object",
        "title": "MySQL 服务配置",
        "form": true,
        "properties": {
          "type": {
            "type": "string",
            "title": "服务类型",
            "form": true,
            "enum": ["ClusterIP", "NodePort", "LoadBalancer"],
            "default": "ClusterIP",
            "description": "MySQL 服务的类型。"
          },
          "port": {
            "type": "integer",
            "title": "服务端口",
            "form": true,
            "default": 3306,
            "description": "MySQL 服务的端口号。"
          }
        },
        "required": ["type", "port"]
      },
      "persistence": {
        "type": "object",
        "title": "持久化配置",
        "form": true,
        "properties": {
          "enabled": {
            "type": "boolean",
            "title": "启用持久化存储",
            "form": true,
            "default": true,
            "description": "启用或禁用 MySQL 的持久化存储。"
          },
          "accessMode": {
            "type": "string",
            "title": "访问模式",
            "form": true,
            "enum": ["ReadWriteOnce", "ReadOnlyMany", "ReadWriteMany"],
            "default": "ReadWriteOnce",
            "description": "持久卷的访问模式。"
          },
          "size": {
            "type": "string",
            "title": "存储卷大小",
            "form": true,
            "default": "8Gi",
            "description": "持久卷的大小。"
          },
          "storageClass": {
            "type": "string",
            "title": "存储类",
            "form": true,
            "default": "standard",
            "description": "要使用的存储类。"
          }
        },
        "required": ["enabled", "accessMode", "size"]
      }
    },
    "required": ["mysqlRootPassword", "mysqlUser", "mysqlPassword", "mysqlDatabase", "image", "service", "persistence"]
  }
  