{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "MySQL Helm Chart Values Schema",
    "properties": {
      "imageTag": {
        "type": "string",
        "title": "MySQL 版本",
        "description": "选择 MySQL 的版本标签",
        "enum": ["5.7.30", "8.0.28", "5.6.51"],
        "default": "5.7.30"
      },
      "mysqlRootPassword": {
        "type": "string",
        "title": "MySQL Root 用户密码",
        "description": "设置 MySQL Root 用户的密码",
        "minLength": 8
      },
      "mysqlUser": {
        "type": "string",
        "title": "新建 MySQL 用户",
        "description": "要创建的新 MySQL 用户名",
        "default": "user"
      },
      "mysqlPassword": {
        "type": "string",
        "title": "新建 MySQL 用户的密码",
        "description": "为新建的 MySQL 用户设置密码",
        "minLength": 8
      },
      "mysqlDatabase": {
        "type": "string",
        "title": "MySQL 数据库名称",
        "description": "新建的数据库名称",
        "default": "mydatabase"
      },
      "persistence": {
        "type": "object",
        "title": "持久化存储配置",
        "properties": {
          "enabled": {
            "type": "boolean",
            "default": true
          },
          "accessMode": {
            "type": "string",
            "default": "ReadWriteOnce"
          },
          "size": {
            "type": "string",
            "default": "8Gi"
          }
        }
      },
      "resources": {
        "type": "object",
        "title": "资源请求和限制",
        "properties": {
          "requests": {
            "type": "object",
            "properties": {
              "memory": {
                "type": "string",
                "default": "256Mi"
              },
              "cpu": {
                "type": "string",
                "default": "100m"
              }
            }
          }
        }
      },
      "securityContext": {
        "type": "object",
        "title": "安全上下文配置",
        "properties": {
          "enabled": {
            "type": "boolean",
            "default": false
          }
        }
      },
      "service": {
        "type": "object",
        "title": "服务配置",
        "properties": {
          "type": {
            "type": "string",
            "default": "ClusterIP"
          },
          "port": {
            "type": "integer",
            "default": 3306
          }
        }
      },
      "ssl": {
        "type": "object",
        "title": "SSL 配置",
        "properties": {
          "enabled": {
            "type": "boolean",
            "default": false
          },
          "secret": {
            "type": "string",
            "default": "mysql-ssl-certs"
          }
        }
      }
    },
    "required": [
      "mysqlRootPassword",
      "mysqlUser",
      "mysqlPassword"
    ],
    "additionalProperties": false
  }
  