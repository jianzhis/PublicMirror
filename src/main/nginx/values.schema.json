{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "image": {
      "type": "object",
      "properties": {
        "tag": {
          "type": "string",
          "title": "镜像标签",
          "description": "指定 MySQL 镜像的标签。",
          "default": "8.0"
        }
      },
      "required": ["tag"]
    },
    "mysqlRootPassword": {
      "type": "string",
      "title": "MySQL 根密码",
      "minLength": 1,
      "description": "用于设置 MySQL 根用户的密码。"
    }
  },
  "required": ["mysqlRootPassword"]
}
