{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "replicaCount": {
            "type": "integer",
            "title": "副本数量",
            "description": "副本数量",
            "form": true,
            "minimum": 1
        },
        "resources": {
            "type": "object",
            "title": "资源配置",
            "form": true,
            "properties": {
                "requests": {
                    "type": "object",
                    "title": "资源请求",
                    "form": true,
                    "properties": {
                        "cpu": {
                            "type": "string",
                            "title": "CPU 请求",
                            "description": "CPU 请求",
                            "form": true
                        },
                        "memory": {
                            "type": "string",
                            "title": "内存请求",
                            "description": "内存请求",
                            "form": true
                        }
                    },
                    "required": ["cpu", "memory"]
                },
                "limits": {
                    "type": "object",
                    "title": "资源限制",
                    "form": true,
                    "properties": {
                        "cpu": {
                            "type": "string",
                            "title": "CPU 限制",
                            "description": "CPU 限制",
                            "form": true
                        },
                        "memory": {
                            "type": "string",
                            "title": "内存限制",
                            "description": "内存限制",
                            "form": true
                        }
                    },
                    "required": ["cpu", "memory"]
                }
            },
            "required": ["requests", "limits"]
        },
        "persistence": {
            "type": "object",
            "title": "持久化存储",
            "form": true,
            "properties": {
                "uptimeKuma": {
                    "type": "object",
                    "title": "Uptime Kuma 配置",
                    "form": true,
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "title": "启用持久化存储",
                            "description": "是否启用持久化存储",
                            "form": true
                        },
                        "size": {
                            "type": "string",
                            "title": "存储大小",
                            "description": "持久化存储的大小",
                            "form": true
                        }
                    },
                    "required": ["enabled", "size"]
                }
            },
            "required": ["uptimeKuma"]
        },
        "env": {
            "type": "array",
            "title": "环境变量",
            "description": "需要在容器中设置的环境变量列表",
            "form": true,
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "title": "变量名称",
                        "description": "环境变量的名称",
                        "form": true
                    },
                    "value": {
                        "type": "string",
                        "title": "变量值",
                        "description": "环境变量的值",
                        "form": true
                    }
                },
                "required": ["name", "value"]
            }
        }
    },
    "required": ["replicaCount", "resources", "persistence"]
}
