{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://example.com/application-config.schema.json",
    "title": "Application Configuration Schema",
    "type": "object",
    "definitions": {
      "cpuFormat": {
        "type": "string",
        "pattern": "^[0-9]+(m)?$",
        "description": "CPU资源配置格式"
      },
      "memoryFormat": {
        "type": "string",
        "pattern": "^[0-9]+(Mi|Gi)$",
        "description": "内存资源配置格式"
      },
      "resourceObject": {
        "type": "object",
        "required": ["cpu", "memory"],
        "properties": {
          "cpu": {
            "$ref": "#/definitions/cpuFormat"
          },
          "memory": {
            "$ref": "#/definitions/memoryFormat"
          }
        }
      }
    },
    "properties": {
      "replicaCount": {
        "type": "integer",
        "title": "副本数量",
        "description": "副本数量",
        "minimum": 1,
        "default": 1
      },
      "resources": {
        "type": "object",
        "title": "资源配置",
        "required": ["requests", "limits"],
        "properties": {
          "requests": {
            "allOf": [
              { "$ref": "#/definitions/resourceObject" },
              {
                "title": "资源请求",
                "description": "容器资源请求配置"
              }
            ]
          },
          "limits": {
            "allOf": [
              { "$ref": "#/definitions/resourceObject" },
              {
                "title": "资源限制",
                "description": "容器资源限制配置"
              }
            ]
          }
        }
      },
      "persistence": {
        "type": "object",
        "title": "持久化存储",
        "required": ["uptimeKuma"],
        "properties": {
          "uptimeKuma": {
            "type": "object",
            "title": "Uptime Kuma 配置",
            "required": ["enabled", "size"],
            "properties": {
              "enabled": {
                "type": "boolean",
                "title": "启用持久化存储",
                "description": "是否启用持久化存储",
                "default": false
              },
              "size": {
                "$ref": "#/definitions/memoryFormat",
                "title": "存储大小",
                "description": "持久化存储的大小"
              }
            }
          }
        }
      },
      "env": {
        "type": "array",
        "title": "环境变量",
        "description": "需要在容器中设置的环境变量列表",
        "items": {
          "type": "object",
          "required": ["name", "value"],
          "properties": {
            "name": {
              "type": "string",
              "title": "变量名称",
              "description": "环境变量的名称",
              "enum": ["NODE_ENV", "KUMA_DEBUG"]
            },
            "value": {
              "type": "string",
              "title": "变量值",
              "description": "环境变量的值",
              "enum": ["production", "development", "true", "false"],
              "default": "production"
            }
          }
        },
        "default": [
          {
            "name": "NODE_ENV",
            "value": "production"
          },
          {
            "name": "KUMA_DEBUG",
            "value": "false"
          }
        ]
      }
    },
    "required": ["replicaCount", "resources", "persistence"]
  }