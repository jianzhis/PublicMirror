{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "replicaCount": {
      "type": "integer",
      "title": "Replica Count",
      "description": "Number of replicas to deploy",
      "minimum": 1,
      "default": 1
    },
    "image": {
      "type": "object",
      "title": "Container Image Configuration",
      "required": ["imageRegistry", "repository", "tag"],
      "properties": {
        "imageRegistry": {
          "type": "string",
          "title": "Image Registry",
          "default": "registry-2.yunna.net"
        },
        "repository": {
          "type": "string",
          "title": "Image Repository",
          "default": "louislam/uptime-kuma"
        },
        "tag": {
          "type": "string",
          "title": "Image Tag",
          "default": "latest"
        },
        "pullPolicy": {
          "type": "string",
          "title": "Image Pull Policy",
          "enum": ["IfNotPresent", "Always", "Never"],
          "default": "IfNotPresent"
        }
      }
    },
    "service": {
      "type": "object",
      "title": "Service Configuration",
      "properties": {
        "type": {
          "type": "string",
          "title": "Service Type",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer"],
          "default": "ClusterIP"
        },
        "port": {
          "type": "integer",
          "title": "Service Port",
          "minimum": 1,
          "maximum": 65535,
          "default": 3001
        }
      }
    },
    "resources": {
      "type": "object",
      "title": "Resource Requirements",
      "properties": {
        "limits": {
          "type": "object",
          "title": "Resource Limits",
          "properties": {
            "cpu": {
              "type": "string",
              "title": "CPU Limit",
              "pattern": "^[0-9]+m?$",
              "default": "1000m"
            },
            "memory": {
              "type": "string",
              "title": "Memory Limit",
              "pattern": "^[0-9]+(Mi|Gi)$",
              "default": "1024Mi"
            }
          }
        },
        "requests": {
          "type": "object",
          "title": "Resource Requests",
          "properties": {
            "cpu": {
              "type": "string",
              "title": "CPU Request",
              "pattern": "^[0-9]+m?$",
              "default": "500m"
            },
            "memory": {
              "type": "string",
              "title": "Memory Request",
              "pattern": "^[0-9]+(Mi|Gi)$",
              "default": "512Mi"
            }
          }
        }
      }
    },
    "persistence": {
      "type": "object",
      "title": "Persistence Configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "title": "Enable Persistence",
          "default": true
        },
        "accessMode": {
          "type": "string",
          "title": "Access Mode",
          "enum": ["ReadWriteOnce", "ReadOnlyMany", "ReadWriteMany"],
          "default": "ReadWriteOnce"
        },
        "size": {
          "type": "string",
          "title": "Storage Size",
          "pattern": "^[0-9]+(Mi|Gi)$",
          "default": "1Gi"
        },
        "storageClass": {
          "type": "string",
          "title": "Storage Class",
          "default": "local"
        }
      }
    },
    "env": {
      "type": "object",
      "title": "Environment Variables",
      "properties": {
        "env1": {
          "type": "object",
          "title": "Environment Variable 1",
          "properties": {
            "name": {
              "type": "string",
              "title": "Variable Name",
              "default": "NODE_ENV"
            },
            "value": {
              "type": "string",
              "title": "Variable Value",
              "default": "production"
            }
          }
        },
        "env2": {
          "type": "object",
          "title": "Environment Variable 2",
          "properties": {
            "name": {
              "type": "string",
              "title": "Variable Name",
              "default": "KUMA_DEBUG"
            },
            "value": {
              "type": "string",
              "title": "Variable Value",
              "default": "false"
            }
          }
        }
      }
    }
  }
}